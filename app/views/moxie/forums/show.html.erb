<div class="m_nav">< <%= link_to "All Forums", moxie_forums_path, :class => "always_underlined "%></div>

<div class="m_header"><%= @forum.title %></div>

<div>
<% @forum.topics.each do |topic| %>

  <div class="m_topic clearfix">
      
    <div class="m_name">
      <div class="m_title"><%= link_to topic.title, moxie_topic_path( topic ) %></div>
      <div class="m_description">
        <span class="m_topic_count"><%= pluralize topic.post_count, "post" %>.</span>
        <%# forum.description %>
      </div>
    </div>

    <div class="m_info">
      <div class="m_topic_count"><%# pluralize forum.topic_count, "topic" %></div>
    </div>

  </div>
    
<% end %>
</div>


<%= form_for [ @topic ] do |f| %>
  <% if @topic.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this forum from being saved:</h2>
    <ul>
    <% @topic.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <%= hidden_field_tag 'moxie_topic[forum_id]', @forum.id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
